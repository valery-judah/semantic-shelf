{
  "openapi": "3.1.0",
  "info": {
    "title": "Recommendation Service MVP",
    "description": "A recommendation service providing tailored book suggestions.",
    "version": "0.1.0"
  },
  "paths": {
    "/books": {
      "get": {
        "tags": [
          "books"
        ],
        "summary": "List Books",
        "description": "Retrieve a paginated list of books from the catalog.",
        "operationId": "list_books_books_get",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "description": "Page number",
              "default": 1,
              "title": "Page"
            },
            "description": "Page number"
          },
          {
            "name": "size",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "maximum": 100,
              "minimum": 1,
              "description": "Items per page",
              "default": 20,
              "title": "Size"
            },
            "description": "Items per page"
          },
          {
            "name": "genre",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Filter by genre",
              "title": "Genre"
            },
            "description": "Filter by genre"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedBooks"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/books/{book_id}": {
      "get": {
        "tags": [
          "books"
        ],
        "summary": "Get Book By Id",
        "description": "Retrieve a specific book's metadata.",
        "operationId": "get_book_by_id_books__book_id__get",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Book Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookRead"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/books/{book_id}/similar": {
      "get": {
        "tags": [
          "books"
        ],
        "summary": "Get Similar Books",
        "description": "Retrieve an ordered list of similar book IDs for a given book.",
        "operationId": "get_similar_books_books__book_id__similar_get",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Book Id"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "Max number of similar books to return",
              "default": 20,
              "title": "Limit"
            },
            "description": "Max number of similar books to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimilarBooksResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/me/recommendations": {
      "get": {
        "tags": [
          "recommendations"
        ],
        "summary": "Get Recommendations for Current User",
        "description": "Generates a list of personalized book recommendations based on the current user's preferences.",
        "operationId": "read_my_recommendations_me_recommendations_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecommendationsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Not authenticated"
          }
        },
        "security": [
          {
            "APIKeyHeader": []
          }
        ]
      }
    },
    "/me": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Get Current User Profile",
        "description": "Fetches the current user profile based on the external identity provider ID. If the user doesn't exist, it is created as a shadow user.",
        "operationId": "get_my_profile_me_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRead"
                }
              }
            }
          },
          "401": {
            "description": "Not authenticated"
          }
        },
        "security": [
          {
            "APIKeyHeader": []
          }
        ]
      }
    },
    "/me/preferences": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Update Current User Preferences",
        "description": "Updates the preferences for the current user. Only provided fields are updated.",
        "operationId": "update_my_preferences_me_preferences_patch",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserPreferencesPatchRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRead"
                }
              }
            }
          },
          "401": {
            "description": "Not authenticated"
          },
          "404": {
            "description": "User not found"
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "security": [
          {
            "APIKeyHeader": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Book": {
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "Title of the book",
            "examples": [
              "Dune"
            ]
          },
          "author": {
            "type": "string",
            "title": "Author",
            "description": "Author of the book",
            "examples": [
              "Frank Herbert"
            ]
          },
          "cover_url": {
            "type": "string",
            "title": "Cover Url",
            "description": "URL to the cover image of the book",
            "examples": [
              "https://example.com/dune.jpg"
            ]
          }
        },
        "type": "object",
        "required": [
          "title",
          "author",
          "cover_url"
        ],
        "title": "Book"
      },
      "BookRead": {
        "properties": {
          "title": {
            "type": "string",
            "title": "Title"
          },
          "authors": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Authors"
          },
          "genres": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Genres"
          },
          "publication_year": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Publication Year"
          },
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Description"
          },
          "id": {
            "type": "string",
            "title": "Id"
          }
        },
        "type": "object",
        "required": [
          "title",
          "id"
        ],
        "title": "BookRead"
      },
      "DomainPreferences": {
        "properties": {
          "preferred_genres": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Preferred Genres",
            "description": "List of preferred book genres",
            "examples": [
              [
                "Science Fiction",
                "Fantasy"
              ]
            ]
          },
          "ui_theme": {
            "type": "string",
            "title": "Ui Theme",
            "description": "Preferred UI theme for the user",
            "default": "dark",
            "examples": [
              "dark",
              "light"
            ]
          }
        },
        "type": "object",
        "title": "DomainPreferences"
      },
      "DomainPreferencesUpdate": {
        "properties": {
          "preferred_genres": {
            "anyOf": [
              {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              {
                "type": "null"
              }
            ],
            "title": "Preferred Genres",
            "description": "Optional list of preferred book genres to update",
            "examples": [
              [
                "Science Fiction",
                "Fantasy"
              ]
            ]
          },
          "ui_theme": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Ui Theme",
            "description": "Optional UI theme to update",
            "examples": [
              "dark",
              "light"
            ]
          }
        },
        "type": "object",
        "title": "DomainPreferencesUpdate"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "PaginatedBooks": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/BookRead"
            },
            "type": "array",
            "title": "Items"
          },
          "total": {
            "type": "integer",
            "title": "Total"
          },
          "page": {
            "type": "integer",
            "title": "Page"
          },
          "size": {
            "type": "integer",
            "title": "Size"
          }
        },
        "type": "object",
        "required": [
          "items",
          "total",
          "page",
          "size"
        ],
        "title": "PaginatedBooks"
      },
      "Recommendation": {
        "properties": {
          "book_id": {
            "type": "string",
            "title": "Book Id",
            "description": "Unique identifier of the recommended book",
            "examples": [
              "book-123"
            ]
          },
          "score": {
            "type": "number",
            "maximum": 1.0,
            "minimum": 0.0,
            "title": "Score",
            "description": "Recommendation score, between 0.0 and 1.0",
            "examples": [
              0.95
            ]
          },
          "reason": {
            "type": "string",
            "title": "Reason",
            "description": "Explanation for the recommendation",
            "examples": [
              "Because you like Science Fiction"
            ]
          },
          "book": {
            "$ref": "#/components/schemas/Book",
            "description": "Detailed information about the recommended book"
          }
        },
        "type": "object",
        "required": [
          "book_id",
          "score",
          "reason",
          "book"
        ],
        "title": "Recommendation"
      },
      "RecommendationsResponse": {
        "properties": {
          "recommendations": {
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            },
            "type": "array",
            "title": "Recommendations",
            "description": "List of recommended books"
          }
        },
        "type": "object",
        "required": [
          "recommendations"
        ],
        "title": "RecommendationsResponse"
      },
      "SimilarBooksResponse": {
        "properties": {
          "book_id": {
            "type": "string",
            "title": "Book Id",
            "description": "Unique identifier of the anchor book",
            "examples": [
              "book-123"
            ]
          },
          "similar_book_ids": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Similar Book Ids",
            "description": "List of similar book identifiers",
            "examples": [
              [
                "book-456",
                "book-789"
              ]
            ]
          },
          "trace_id": {
            "type": "string",
            "title": "Trace Id",
            "description": "Correlation identifier for the request",
            "examples": [
              "01J...XYZ"
            ]
          },
          "algo_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Algo Id",
            "description": "Identifier for the recommendation algorithm",
            "examples": [
              "meta_v0"
            ]
          },
          "recs_version": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Recs Version",
            "description": "Version of the published recommendation artifacts",
            "examples": [
              "2026-02-25T03:00Z"
            ]
          }
        },
        "type": "object",
        "required": [
          "book_id",
          "similar_book_ids",
          "trace_id"
        ],
        "title": "SimilarBooksResponse"
      },
      "UserPreferencesPatchRequest": {
        "properties": {
          "domain_preferences": {
            "$ref": "#/components/schemas/DomainPreferencesUpdate",
            "description": "Preferences to update"
          }
        },
        "type": "object",
        "required": [
          "domain_preferences"
        ],
        "title": "UserPreferencesPatchRequest"
      },
      "UserRead": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id",
            "description": "Unique internal ID of the user",
            "examples": [
              "12345678-1234-5678-1234-567812345678"
            ]
          },
          "external_idp_id": {
            "type": "string",
            "title": "External Idp Id",
            "description": "External Identity Provider ID",
            "examples": [
              "auth0|123456"
            ]
          },
          "domain_preferences": {
            "$ref": "#/components/schemas/DomainPreferences",
            "description": "User's domain preferences"
          }
        },
        "type": "object",
        "required": [
          "id",
          "external_idp_id",
          "domain_preferences"
        ],
        "title": "UserRead"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          },
          "input": {
            "title": "Input"
          },
          "ctx": {
            "type": "object",
            "title": "Context"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "X-User-Id"
      }
    }
  }
}